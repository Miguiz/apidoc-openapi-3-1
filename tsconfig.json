{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "declaration": true,
        "declarationMap": false,
        "sourceMap": false,
        "outDir": "./dist/",
        "strict": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "downlevelIteration": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/**/*", "dist/**/*"]
}
